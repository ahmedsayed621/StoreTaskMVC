@model int



<h2>Split Space</h2>

@using (Html.BeginForm("Split", "Spaces", FormMethod.Post))
{
    <div class="form-group">
        <label for="spaceId">Space ID:</label>
        <input type="text" name="spaceId" class="form-control" value="@Model" readonly />
    </div>
    <div class="form-group">
        <label for="numberOfSplits">Number of Splits:</label>
        <input type="number" name="numberOfSplits" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Split</button>
}