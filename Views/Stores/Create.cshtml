@model StoreTaskMVC.Models.Store

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Store</h4>
<hr />

<form asp-controller="Stores" asp-action="Create" class="form-group" >

    <div asp-validation-summary="All" class="text-danger alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>


    <label asp-for="StoreName">Store Name</label>
    <input type="text" class="form-control" asp-for="StoreName" />
    <span asp-validation-for="StoreName" class="text-danger"></span>
    <br />

    <label asp-for="Address">Address</label>
    <input type="text" class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
    

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsMain" checked="">
        <label asp-for="IsMain">IsMain</label>
        <span asp-validation-for="IsMain" class="text-danger"></span>
    </div>
    
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsInvoiceDirect" checked="">
        <label asp-for="IsInvoiceDirect">IsInvoiceDirect</label>
        <span asp-validation-for="IsInvoiceDirect" class="text-danger"></span>
    </div>
    <br />



    <center>
        <input type="submit" class="btn btn-primary" value="Save" />
        <input type="reset" class="btn btn-danger" value="Clare" />
    </center>

</form>


