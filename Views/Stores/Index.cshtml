@model IEnumerable<StoreTaskMVC.Models.Store>

@{
    ViewData["Title"] = "Index";
}


<style>
    th {
        text-align: center !important;
    }
</style>

@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
}



<a class="btn btn-success" asp-controller="Stores" asp-action="Create"
style="margin-bottom:10px">CreateNewStore</a>


<br />




<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2 style="margin-left:10px;">Stores List</h2>
                    
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable text-center font-weight-bold">
                            <thead>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>IsMain</th>
                                    <th>IsInvoiceDirect</th>
                               
                                    <th>Actions</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        
                                        <td>@item.StoreName</td>
                                        <td>@item.Address</td>
                                        <td>@item.IsMain</td>
                                        <td>@item.IsInvoiceDirect</td>
                                        
                                        
                                        <td><a asp-controller="Stores" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                        <a asp-controller="Stores" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-controller="Stores" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section DataTableSection{

    <script src="~/plugins/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>


    



    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true,
                paging: true,
                pageLength: 5,
                bSort: true,
                bFilter: true,
                bLengthChange: false,
                //bInfo: false,
                lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

            });



            


        });

    </script>
}



